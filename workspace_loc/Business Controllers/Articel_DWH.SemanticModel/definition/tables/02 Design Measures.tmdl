	measure 'List of Group values' =
			
			VAR __DISTINCT_VALUES_COUNT = DISTINCTCOUNT('Dim_ARTICLE'[Group])
			VAR __MAX_VALUES_TO_SHOW = 1
			RETURN
				IF(
					__DISTINCT_VALUES_COUNT > __MAX_VALUES_TO_SHOW,
					CONCATENATE(
						CONCATENATEX(
							TOPN(
								__MAX_VALUES_TO_SHOW,
								VALUES('Dim_ARTICLE'[Group]),
								'Dim_ARTICLE'[Group],
								ASC
							),
							'Dim_ARTICLE'[Group],
							", ",
							'Dim_ARTICLE'[Group],
							ASC
						),
						", etc."
					),
					CONCATENATEX(
						VALUES('Dim_ARTICLE'[Group]),
						'Dim_ARTICLE'[Group],
						", ",
						'Dim_ARTICLE'[Group],
						ASC
					)
				)
		lineageTag: 91dc6acd-3002-4006-b106-25bbd7b1edfe

