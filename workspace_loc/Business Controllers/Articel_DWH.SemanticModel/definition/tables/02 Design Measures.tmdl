	measure 'Strike Rate vs LY% Color Code' =
			
			VAR _measure = [12 Strike Rate vs LY%]
			VAR _result =
			    SWITCH(
			        TRUE(),
			           _measure > 0, "#228b22",       -- If the measure is positive, use Green
			        _measure < 0, "#FF0000",         -- If the measure is negative, use Red
			        "Black"                      -- Default color if none of the above conditions are met
			    )
			RETURN
			_result
